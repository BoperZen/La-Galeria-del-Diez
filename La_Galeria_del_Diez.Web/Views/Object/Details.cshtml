@model La_Galeria_del_Diez.Application.DTOs.Auctionable_ObjectDTO

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            @if (Model.Images != null && Model.Images.Any())
            {
                <div id="objectImagesCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
                    <div class="carousel-inner rounded shadow">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Images[i].Data)"
                                     class="d-block w-100"
                                     style="max-height:400px;object-fit:contain;"
                                     alt="Image @(i + 1)" />
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#objectImagesCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#objectImagesCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="bi bi-image"></i> No images available
                </div>
            }
        </div>
        <div class="col-md-6">
            <h2 class="mb-2">@Model.Name</h2>
            <p class="text-muted mb-1">@Model.Description</p>
            <dl class="row small">
                <dt class="col-sm-4">Condition</dt>
                <dd class="col-sm-8">@Model.Condition</dd>
                <dt class="col-sm-4">Registration Date</dt>
                <dd class="col-sm-8">@Model.RegistrationDate.ToString("yyyy-MM-dd")</dd>
                <dt class="col-sm-4">State Id</dt>
                <dd class="col-sm-8">@Model.IdState</dd>
                <dt class="col-sm-4">User Id</dt>
                <dd class="col-sm-8">@Model.IdUser</dd>
            </dl>
            <div class="mb-2">
                <strong>Categories:</strong>
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    @foreach (var cat in Model.Categories)
                    {
                        <span class="badge bg-primary me-1">@cat.Description</span>
                    }
                }
                else
                {
                    <span class="text-muted">No categories</span>
                }
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h4 class="mb-3">Auctions</h4>
    @if (Model.Auctions != null && Model.Auctions.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Base Price</th>
                        <th>Min Increment</th>
                        <th>State Id</th>
                        <th>UserName</th>
                        <th>Winner</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var auction in Model.Auctions)
                    {
                        <tr>
                            <td>@auction.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@auction.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>@auction.BasePrice.ToString("C")</td>
                            <td>@auction.MinIncrement.ToString("C")</td>
                            <td>@auction.State.Description</td>
                            <td>@auction.IdUserNavegation.Username</td>
                            @if(auction.Winner != null){
                            <td>@auction.Winner.Username</td>
                            }
                            else{
                                <td><span class="text-muted">No winner yet</span></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No auctions for this object.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
