@model X.PagedList.IPagedList<La_Galeria_del_Diez.Application.DTOs.Auctionable_ObjectDTO>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Object Management";
    var total = Model?.TotalItemCount ?? 0;
}

<nav class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Object Management</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Objects</h1>
        <p class="text-muted mb-0">Auctionable objects management. Total: <strong>@total</strong>.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> New object
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-body d-flex justify-content-between align-items-center">
        <span class="fw-semibold">List</span>
        <span class="small text-muted">
            Showing
            <strong>@Model?.FirstItemOnPage</strong>–
            <strong>@Model?.LastItemOnPage</strong>
            of <strong>@Model?.TotalItemCount</strong>
        </span>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4 text-center">
                <div class="display-6 mb-2"><i class="bi bi-inbox"></i></div>
                <h2 class="h5">No objects registered</h2>
                <p class="text-muted mb-3">Create the first object to get started.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> Create object
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light position-sticky top-0" style="z-index:1;">
                        <tr>
                            <th class="ps-3" style="width:60px;">Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Condition</th>
                            <th style="width:130px;">Image</th>
                            <th class="text-end pe-3" style="width:220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <span class="badge text-bg-light border">@item.Id</span>
                                </td>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Condition</td>
                                <td>
                                    @if (item.Images != null && item.Images.Any())
                                    {
                                        var firstImage = item.Images.FirstOrDefault();
                                        if (firstImage?.Data != null)
                                        {
                                            <img class="rounded object-fit-cover"
                                                 style="max-width:120px; max-height:80px;"
                                                 src="data:image/jpeg;base64,@Convert.ToBase64String(firstImage.Data)"
                                                 alt="Image of @item.Name"
                                                 loading="lazy" />
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-warning">
                                                <i class="bi bi-image me-1"></i>No image
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge text-bg-warning">
                                            <i class="bi bi-image me-1"></i>No image
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-eye"></i><span class="d-none d-lg-inline ms-1">Details</span>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil-square"></i><span class="d-none d-lg-inline ms-1">Edit</span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i><span class="d-none d-lg-inline ms-1">Delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    @* Pagination *@
    @if (Model != null && Model.PageCount > 1)
    {
        <div class="card-footer bg-body d-flex flex-column flex-md-row align-items-center justify-content-between gap-2">
            <div class="small text-muted">
                Page <strong>@Model.PageNumber</strong> of <strong>@Model.PageCount</strong>
            </div>
            <nav aria-label="Object pagination">
                @Html.PagedListPager(
                    Model,
                    page => Url.Action("Index", new { page }),
                    new PagedListRenderOptions
                    {
                        UlElementClasses = new[] { "pagination", "mb-0" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" },
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        MaximumPageNumbersToDisplay = 5
                    }
                )
            </nav>
        </div>
    }
</div>
